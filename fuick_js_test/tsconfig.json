{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "../fuick_js_framework/src/types.d.ts"
  ]
}